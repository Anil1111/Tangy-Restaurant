@model IEnumerable<Tangy.Models.MenuItem>

@{
    ViewData["Title"] = "Index";
}

<br />
<h3>Menu Item List</h3>
<br />

@await Html.PartialAsync("_CreateButtonPartial")
<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.CategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SubCategoryID)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.SubCategory.Name)
                <td>
                    @await Html.PartialAsync("_TableButtonPartial", item.ID)
                </td>
            </tr>
        }
    </table>
</div>