@model Tangy.Models.Coupon

@{
    ViewData["Title"] = "Delete";
}

<br />
<h3>Delete Coupon</h3>
<br />
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="row container form-border">
        <div class="col-12">
            @{
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
            }
            <img src='@imgsrc' height="55px" width="100%" />
        </div>
        <div class="col-6">
            <input hidden asp-for="ID" />
            <br />
            <fieldset disabled>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Picture" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" id="projectImage" name="files" multiple />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CouponType" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="CouponType" asp-items="@Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Discount" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Discount" class="form-control" />
                    </div>
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MinimumAmount" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MinimumAmount" class="form-control" />
                    </div>
                    <span asp-validation-for="MinimumAmount" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IsActive" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" asp-for="IsActive" class="form-control" />
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-12" style="padding-top:10px">
            <input type="submit" value="Delete" asp-route-id="@Model.ID" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
